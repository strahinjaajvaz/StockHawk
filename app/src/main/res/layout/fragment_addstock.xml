<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title"
        android:layout_marginBottom="@dimen/fragment_addstock_heading_margin_bottom"
        android:paddingStart="@dimen/fragment_addstock_heading_padding_start"
        android:textAlignment="viewStart"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <EditText
        android:id="@+id/fragment_addstock_example_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_addstock_heading_padding_start"
        android:layout_marginLeft="@dimen/fragment_addstock_heading_padding_start"
        android:layout_marginRight="@dimen/fragment_addstock_heading_padding_start"
        android:textAlignment="viewStart"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="@string/dialog_hint"
        android:inputType="textCapCharacters" />

</LinearLayout>

